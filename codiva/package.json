{
  "name": "codiva",
  "publisher": "yashclouded", 
  "displayName": "Codiva - Code Activity Tracker & Gamification",
  "description": "Transform your coding journey into an epic adventure! Track progress, earn XP, unlock achievements, and maintain streaks. No more procrastination; code to improve, code to win!",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other",
    "Education"
  ],
  "keywords": [
    "gamification",
    "education",
    "tracking",
    "achievements",
    "streaks",
    "xp",
    "coding",
    "statistics",
    "analytics",
    "motivation",
    "productivity"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yashclouded/codiva"
  },
  "license": "MIT",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codiva.showDashboard",
        "title": "Show Codiva Dashboard"
      },

      {
        "command": "codiva.startPomodoro",
        "title": "Codiva: Start Pomodoro (25 min Work)"
      },
      {
        "command": "codiva.startShortBreak",
        "title": "Codiva: Start Short Break (5 min)"
      },
      {
        "command": "codiva.startLongBreak",
        "title": "Codiva: Start Long Break (15 min)"
      },
      {
        "command": "codiva.pausePomodoro",
        "title": "Codiva: Pause Current Pomodoro"
      },
      {
        "command": "codiva.resumePomodoro",
        "title": "Codiva: Resume Pomodoro"
      },
      {
        "command": "codiva.stopPomodoro",
        "title": "Codiva: Stop Current Pomodoro"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Codiva",
      "properties": {

      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "esbuild": "^0.25.9",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
